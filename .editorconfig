root = true

[*.cs]
indent_size = 4
indent_style = tab
tab_width = 4
end_of_line = crlf
insert_final_newline = false

[*.{js,css,json}]
end_of_line = crlf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8

[*.{cshtml}]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.{xml}]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8
