root = true

[*.cs]
indent_size = 4
indent_style = tab
tab_width = 4
end_of_line = crlf
insert_final_newline = false

[*.{js,ts,css,json}]
end_of_line = crlf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8

[*.{cshtml}]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.{xml}]
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
