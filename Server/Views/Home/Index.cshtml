@model IndexViewModel
@{
    ViewData["Title"] = "Sessions";
}

<h3>Sessions</h3>
    <table class="table table-sm table-striped table-hover">
        <thead>
            <tr>
                <th>Start time</th>
                <th>Track</th>
                <th>Type</th>
                <th>Remaining</th>
                <th>Cars</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(SessionSummary session in Model.Sessions) {
                <tr>
                    <td><a asp-action="Session" asp-route-sessionId="@session.SessionId">@session.Timestamp.ToString("yyyy-MM-dd HH:mm")</a></td>
                    <td>@session.Track</td>
                    <td>@session.Type</td>
                    <td>@(session.Active ? Format.Time(session.Remaining) : "Complete")</td>
                    <td>@session.CarCount</td>
                    <td>@(session.Active && session.Finished ? "Finished" : session.Active && session.ClientCount > 0 ? "Active" : session.Finished ? "Closed" : "Inactive")</td>
                </tr>
            }
        </tbody>
    </table>

